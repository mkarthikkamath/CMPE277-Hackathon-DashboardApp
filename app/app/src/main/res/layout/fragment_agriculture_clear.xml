<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Include your checkboxes and other views -->

    <!-- Show Button -->
    <Button
        android:id="@+id/show_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Show" />

    <!-- Clear View -->
    <LinearLayout
        android:id="@+id/clear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/show_button"
        android:padding="16dp">

        <!-- Start Year EditText -->
        <EditText
            android:id="@+id/start_year_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Year" />

        <!-- End Year EditText -->
        <EditText
            android:id="@+id/end_year_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Year" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply" />

        <!-- Annotation Button -->
        <Button
            android:id="@+id/annotation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annotation" />

    </LinearLayout>
</RelativeLayout>
